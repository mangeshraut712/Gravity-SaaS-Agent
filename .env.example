# ============================================
# Gravity AI Agent Platform - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE - Supabase Configuration
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# AI/LLM PROVIDERS
# ============================================
# Anthropic Claude (Primary)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# OpenRouter (Fallback/Multiple Models)
OPENROUTER_API_KEY=sk-or-xxxxx

# OpenAI (Optional)
OPENAI_API_KEY=sk-xxxxx

# ============================================
# BILLING & PAYMENTS - Polar.sh
# ============================================
POLAR_PRO_PRODUCT_ID=prod_xxxxx
POLAR_BUSINESS_PRODUCT_ID=prod_xxxxx
POLAR_WEBHOOK_SECRET=whsec_xxxxx

# ============================================
# SECURITY & AUTHENTICATION
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CACHING - Redis (Optional for Development)
# ============================================
# Local: redis://localhost:6379
# Production: redis://user:password@host:port
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# Cache TTL (seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400

# ============================================
# CHANNELS - Messaging Platforms
# ============================================
# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_VERIFY_TOKEN=your-verify-token

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token

# Slack
SLACK_BOT_TOKEN=xoxb-your-token
SLACK_SIGNING_SECRET=your-signing-secret

# ============================================
# APPLICATION SETTINGS
# ============================================
# URLs
APP_URL=http://localhost:3000
API_URL=http://localhost:3001
GATEWAY_URL=http://localhost:3003

# Ports
DASHBOARD_PORT=3000
API_PORT=3001
GATEWAY_PORT=3003

# Environment
NODE_ENV=development

# ============================================
# MONITORING & OBSERVABILITY (Optional)
# ============================================
# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Analytics
ANALYTICS_ENABLED=false
PLAUSIBLE_DOMAIN=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# EMAIL NOTIFICATIONS (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@gravity.ai

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_WHATSAPP=true
ENABLE_TELEGRAM=true
ENABLE_SLACK=false
ENABLE_API_DOCS=true
ENABLE_DEBUG_MODE=false

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Useful for debugging and testing
DEBUG_SQL=false
MOCK_EXTERNAL_APIS=false
SKIP_AUTH_IN_DEV=false
