# =============================================================================
# Gravity AgentFlow - Environment Configuration
# =============================================================================

# =============================================================================
# Environment Settings
# =============================================================================
NODE_ENV=development
LOG_LEVEL=info

# =============================================================================
# Gateway Service Configuration
# =============================================================================
PORT=3001
HOST=0.0.0.0

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gravity
DB_USER=gravity
DB_PASSWORD=your_secure_password_here
DB_SSL=false
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000
DB_ACQUIRE_TIMEOUT=60000

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=gravity:

# =============================================================================
# Supabase Configuration (for Dashboard)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# Anthropic LLM Configuration
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9

# =============================================================================
# OpenRouter Configuration (Optional)
# =============================================================================
OPENROUTER_API_KEY=sk-or-your-api-key-here
OPENROUTER_DEFAULT_MODEL=openrouter/anthropic/claude-3.5-sonnet
OPENROUTER_MODEL=openrouter/anthropic/claude-3.5-sonnet

# =============================================================================
# Polar.sh Billing Configuration
# =============================================================================
POLAR_SECRET_KEY=polar_live_your_secret_key
POLAR_WEBHOOK_SECRET=whsec_your_webhook_secret
POLAR_PRO_PRODUCT_ID=your-pro-product-id
POLAR_BUSINESS_PRODUCT_ID=your-business-product-id

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,gravity.local
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Monitoring & Observability
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# Dashboard Specific
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
APP_URL=http://localhost:3000

# =============================================================================
# WhatsApp Configuration (Optional)
# =============================================================================
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# =============================================================================
# Telegram Bot Configuration (Optional)
# =============================================================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# =============================================================================
# Slack Configuration (Optional)
# =============================================================================
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
